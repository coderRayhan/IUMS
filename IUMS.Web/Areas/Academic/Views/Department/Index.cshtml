}
<div class="row">
    <div class="col-md-6">
        <h3>@title</h3>
        <small>@menuUrl</small>
    </div>
    <div class="col-md-6 text-right">
        <div>
            @{
                <a onclick="jQueryModalGet('/academic/department/OnGetCreateOrEdit', 'Department')" class="btn customBtn">
                    <i class="fa fa-plus-square-o" aria-hidden="true"></i> &nbsp;&nbsp; Add New
                </a>
