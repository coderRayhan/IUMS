@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@using IUMS.Web
@inject IHtmlLocalizer<SharedResource> localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>
    <partial name="_Styles" />
    @*<script src="https://cdn.lordicon.com/lordicon.js"></script>*@

    <style>
        body {
            background-image: url('/images/bsmraau/background.png') !important;
            background-size: cover !important;
            background-repeat: no-repeat !important;
            overflow: auto;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .main {
            position: absolute;
            width: 100%;
            min-height: 100%;
            left: 0px;
            top: 0px;
            background: rgb(219,219,228);
            background: linear-gradient(90deg, rgba(219,219,228,1) 0%, rgba(229,227,230,1) 17%, rgba(229,230,231,1) 100%);
            mix-blend-mode: normal;
            overflow: auto;
        }

        .container {
            position: absolute;
            top: 50%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
            left: 0;
            right: 0;
            margin-left: auto;
            margin-right: auto;
            margin-top: 3rem;
        }

        .loginBox {
            display: flex;
            align-items: center;
        }

        .loginBox-img {
            width: 60%;
        }

            .loginBox-img img {
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;
                display: block;
                width: 100%;
                height: 520px;
            }

        .loginBox-content {
            width: 40%;
            background: #fff;
            height: 100%;
            padding: 0 60px;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
        }

        .loginBox-headertext img {
            height: 80px;
        }

        .loginBox-headertext h1 {
            font-size: 30px;
            font-weight: 800;
            margin: 10px 0 0 0;
        }

        .loginBox {
            background: #fff;
            border-radius: 20px;
        }


        .colorText {
            color: #1C3669 !important;
            font-weight: 900;
        }

        .leftText {
            position: absolute;
            left: 20px;
            font-family: verdana;
            letter-spacing: -1PX;
        }



        @@media (max-width: 991px) {
            .loginBox {
                flex-direction: column;
            }

            .loginBox-img,
            .loginBox-content {
                width: 100%;
            }


                .loginBox-img img {
                    height: 100%;
                    border-top-right-radius: 20px;
                    border-bottom-left-radius: 0;
                }

            .loginBox-content {
                padding: 25px 50px 50px 50px;
                border-top-right-radius: 0;
                border-bottom-left-radius: 20px;
                border-bottom-right-radius: 20px;
                box-shadow: 2px 2px 2px rgb(0,0,0,0.3);
            }

            .loginContainer {
                margin: 15px 0;
            }

            .container {
                top: auto;
                -webkit-transform: translateY(10%);
                -ms-transform: translateY(10%);
                transform: translateY(10%);
                margin-top: 0rem;
            }
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="loginContainer">
                            <div class="loginBox">
                                <div class="loginBox-img img-fluid">

                                    <img src="/images/bg-login.jpg" alt="Image not loaded" />
                                </div>
                                <div class="loginBox-content">
                                    <div class="loginBox-headertext text-center">
                                        <img id="viewableImage" class="viewableImage" src="/images/logo.png" alt="">
                                        <h6 class="colorText mt-3 mb-5" style="color:#1C3669 !important; font-family:verdana; ">
                                            Jahangirnagar University
                                        </h6>
                                    </div>
                                    <input type="hidden" />
                                    <form class="user" id="account" method="post">
                                        <input type="hidden" />
                                        <div class="form-group loginInput">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-user "></i></span>
                                                <input asp-for="Input.Email" type="text" class="form-control" placeholder="User ID/ Email" aria-describedby="basic-addon1" />
                                            </div>
                                        </div>
                                        <div class="form-group loginInput">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fa fa-lock"></i></span>
                                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter Password" id="password-field" />
                                                <span style="margin-right: 15px; margin-top: 8px; position: relative;" class="pull-right">
                                                    <i class="fa fa-fw fa-eye-slash toggle-password" toggle="#password-field"></i>
                                                    @*<lord-icon src="https://cdn.lordicon.com/vfczflna.json"

                                                    trigger="loop" delay="2000"
                                                    style="width:25px;height:25px;margin-left:15px" toggle="#password-field">
                                                    </lord-icon>*@
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group row" style="color:#9EB6E5;">
                                            <div class="col-6 mr-0"> <input asp-for="Input.RememberMe" type="checkbox" class="form-check-inline loginChack" /> <span class="mb-2">Remember me</span> </div>
                                            <div class="col-6 text-right">
                                                <a asp-area="Identity" asp-page="ForgotPassword">Forgot Password? </a>
                                            </div>
                                        </div>
                                        <div class="form-group mt-5">
                                            <button type="submit" class="btn btnLogin text-light form-control">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-5 pt-5 footerText">
                    <div class="col-12 text-center">
                        @* <p>Copyright © <span style="color:#f2d31a"> JU</span> | Developed By <span style="color:#f2d31a"> Rayhan</span>.</p> *@
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_Scripts" />
    <script>
        $(".toggle-password").click(function () {
            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
</body>
</html>
@await Component.InvokeAsync("Notyf")

